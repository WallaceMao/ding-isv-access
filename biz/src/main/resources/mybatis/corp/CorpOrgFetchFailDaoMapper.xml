<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dingtalk.isv.access.biz.corp.dao.CorpOrgFetchFailDao">

    <resultMap type="com.dingtalk.isv.access.biz.corp.model.CorpOrgFetchFailDO" id="corpOrgFetchFailMap">
        <id property="id" column="id" />
        <result property="gmtCreate" column="gmt_create" />
        <result property="gmtModified" column="gmt_modified" />
        <result property="suiteKey" column="suite_key" />
        <result property="corpId" column="corp_id" />
        <result property="failInfo" column="fail_info" />
        <result property="corpFailType" column="corp_fail_type" />
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        suite_key,
        corp_id,
        fail_info,
        corp_fail_type
    </sql>

    <insert id="addOrUpdateCorpOrgFetchFailDO" useGeneratedKeys="true" keyProperty="id">
        insert into isv_corp_org_fetch_fail (
        gmt_create,
        gmt_modified,
        suite_key,
        corp_id,
        fail_info,
        corp_fail_type
        )values(
        now(),
        now(),
        #{suiteKey},
        #{corpId},
        #{failInfo},
        #{corpFailType}
        )ON DUPLICATE KEY UPDATE gmt_modified=now(),fail_info=#{failInfo}
    </insert>

    <select id="getCorpOrgFetchFailList" resultMap="corpOrgFetchFailMap">
        select <include refid="select-all-fields"/> from isv_corp_org_fetch_fail
        limit #{offset},#{limit}
    </select>


    <delete id="deleteById">
        delete from isv_corp_org_fetch_fail where id=#{id}
    </delete>

</mapper>